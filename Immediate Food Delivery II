WITH FirstOrder AS (
    SELECT
        customer_id,
        order_date,
        customer_pref_delivery_date,
        DENSE_RANK() OVER (PARTITION BY customer_id ORDER BY order_date ASC) as rnk
    FROM Delivery
)

SELECT
    ROUND(
        SUM(CASE WHEN rnk = 1 AND order_date = customer_pref_delivery_date THEN 1 ELSE 0 END) * 100.0 / COUNT(DISTINCT customer_id),
        2
    ) AS immediate_percentage
FROM
    FirstOrder;
